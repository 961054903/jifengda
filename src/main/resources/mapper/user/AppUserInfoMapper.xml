<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.caogen.jfd.dao.user.AppUserInfoDao">
	<sql id="info">phone,photo_url,nickname,level,gender,birthday,occupation,is_real,name,identity_number,identity_front_url,identity_back_url,balance
	</sql>
	<insert id="insert" parameterType="AppUserInfo">
		INSERT INTO app_user_info (
		<include refid="info" />
		) VALUES (
		#{phone},#{photo_url},#{nickname},#{level},#{gender},#{birthday},#{occupation},#{is_real},#{name},#{identity_number},#{identity_front_url},#{identity_back_url},#{balance}
		)
	</insert>
	<update id="update" parameterType="AppUserInfo">
		UPDATE app_user_info
		<set>
			<if test="nickname != null">nickname = #{nickname},</if>
			<if test="photo_url != null">photo_url = #{photo_url},</if>
			<if test="birthday != null">birthday = #{birthday},</if>
			<if test="occupation != null">occupation = #{occupation},</if>
			<if test="level != null">level = #{level},</if>
			<if test="gender != null">gender = #{gender},</if>
			<if test="is_real != null">is_real = #{is_real},</if>
			<if test="name != null">name = #{name},</if>
			<if test="identity_number != null">identity_number = #{identity_number},</if>
			<if test="identity_front_url != null">identity_front_url = #{identity_front_url},</if>
			<if test="identity_back_url != null">identity_back_url = #{identity_back_url},</if>
			<if test="balance != null">balance = #{balance}</if>
		</set>
		<where>
			<if test="id != null">id = #{id}</if>
			<if test="phone != null">AND phone = #{phone}</if>
		</where>
	</update>

	<select id="get" parameterType="AppUserInfo"
		resultType="AppUserInfo">
		SELECT id,
		<include refid="info" />
		FROM app_user_info
		<where>
			<if test="id != null">id = #{id}</if>
			<if test="phone != null">AND phone = #{phone}</if>
		</where>
	</select>
	<select id="find" parameterType="AppUserInfo"
		resultType="AppUserInfo">
		SELECT id,
		<include refid="info" />
		FROM app_user_info
		<where>
			<if test="level != null">level = #{level}</if>
			<if test="gender != null">AND gender = #{gender}</if>
			<if test="occupation != null">AND occupation = #{occupation}</if>
			<if test="is_real != null">AND is_real = #{is_real}</if>
		</where>
	</select>
</mapper>