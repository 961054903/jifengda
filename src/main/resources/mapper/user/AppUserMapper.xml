<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.caogen.jfd.dao.user.AppUserDao">
	<sql id="user">phone,password,salt,state,create_date,des_key,des_iv,token,referrer,referrer_award
	</sql>
	<insert id="insert" parameterType="AppUser">
		INSERT INTO app_user (
		<include refid="user" />
		)
		VALUES (
		#{phone},#{password},#{salt},#{state},#{create_date},#{des_key},#{des_iv},#{token},#{referrer},#{referrer_award}
		)
	</insert>
	<update id="update" parameterType="AppUser">
		UPDATE app_user
		<set>
			password = #{password},
			salt = #{salt},
			des_key = #{des_key},
			des_iv =
			#{des_iv},
			token = #{token}
			<if test="state != null">state = #{state},</if>
			<if test="referrer_award != null">referrer_award = #{referrer_award}</if>
		</set>
		<where>
			<if test="id != null">id = #{id}</if>
			<if test="phone != null">AND phone = #{phone}</if>
		</where>
	</update>
	<select id="get" parameterType="AppUser" resultType="AppUser">
		SELECT id,
		<include refid="user" />
		FROM app_user
		<where>
			<if test="id != null">id = #{id}</if>
			<if test="phone != null">AND phone = #{phone}</if>
			<if test="token != null">AND token = #{token}</if>
		</where>
	</select>
	<select id="find" parameterType="AppUser" resultType="AppUser">
		SELECT id,
		<include refid="user" />
		FROM app_user
		<where>
			<if test="state != null">state = #{state}</if>
			<if test="referrer != null">AND referrer = #{referrer}</if>
		</where>
	</select>
	<sql id="underling">phone,referrer_award</sql>
	<select id="findUnderling" parameterType="AppUser"
		resultType="AppUser">
		SELECT
		<include refid="underling" />
		FROM app_user
		WHERE referrer = #{phone}
	</select>
</mapper>