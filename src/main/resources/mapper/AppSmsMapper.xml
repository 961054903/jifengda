<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.caogen.jfd.dao.AppSmsDao">
	<sql id="appSms">phone,code,create_date</sql>
	<insert id="insert" parameterType="AppSms">
		INSERT INTO app_sms (
		<include refid="appSms" />
		) VALUES (
		#{phone},#{code},#{create_date}
		)
	</insert>
	<delete id="delete" parameterType="AppSms">
		DELETE FROM app_sms
		<where>
			<if test="id != null">id = #{id}</if>
			<if test="phone != null">AND phone = #{phone}</if>
		</where>
	</delete>
	<update id="update" parameterType="AppSms">
		UPDATE app_sms
		<set>
			<if test="code != null">id = #{code},</if>
		</set>
		<where>
			<if test="id != null">id = #{id}</if>
			<if test="phone != null">AND phone = #{phone}</if>
		</where>
	</update>
	<select id="get" parameterType="AppSms" resultType="AppSms">
		SELECT id,
		<include refid="appSms"></include>
		FROM app_sms
		<where>
			<if test="id != null">id = #{id}</if>
			<if test="phone != null">AND phone = #{phone}</if>
		</where>
	</select>
	<select id="find" parameterType="AppSms" resultType="AppSms">
		SELECT id,
		<include refid="appSms"></include>
		FROM app_sms
	</select>
</mapper>