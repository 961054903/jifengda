<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.caogen.jfd.dao.AppUserDao">
	<sql id="appUser">identity,username,password,salt,status,create_date,key,iv,token,referrer
	</sql>
	<insert id="insert" parameterType="AppUser">
		INSERT INTO sys_user (
		<include refid="appUser" />
		)
		VLAUES (
		#{identity},#{username},#{password},#{salt},#{status},#{create_date},#{key},#{iv},#{token},#{referrer}
		)
	</insert>
	<delete id="delete" parameterType="AppUser">
		DELETE FROM app_user
		<where>
			<if test="id != null">id = #{id}</if>
			<if test="username != null">AND username = #{username}</if>
			<if test="identity != null">AND identity = #{identity}</if>
			<if test="token != nul">AND token = #{token}</if>
		</where>
	</delete>
	<update id="update" parameterType="AppUser">
		UPDATE app_user
		<set>
			<if test="password != null">password = #{password},</if>
			<if test="salt != null">salt = #{salt},</if>
			<if test="status != null">status = #{status},</if>
			<if test="key != null">key = #{key},</if>
			<if test="iv != null">iv = #{iv},</if>
			<if test="key != null">token = #{token}</if>
		</set>
		<where>
			<if test="id != null">id = #{id}</if>
			<if test="username != null">AND username = #{username}</if>
			<if test="identity != null">AND identity = #{identity}</if>
			<if test="token != nul">AND token = #{token}</if>
		</where>
	</update>
	<select id="get" parameterType="AppUser" resultType="AppUser">
		SELECT id,
		<include refid="appUser" />
		FROM app_user
		<where>
			<if test="id != null">id = #{id}</if>
			<if test="username != null">AND username = #{username}</if>
			<if test="identity != null">AND identity = #{identity}</if>
			<if test="token != nul">AND token = #{token}</if>
		</where>
	</select>
	<select id="find" parameterType="AppUser" resultType="AppUser">
		SELECT id,
		<include refid="appUser" />
		FROM app_user
		<where>
			<if test="status != null">status = #{status}</if>
			<if test="referrer != null">AND referrer = #{referrer}</if>
		</where>
	</select>
</mapper>