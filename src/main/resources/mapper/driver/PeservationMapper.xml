<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.caogen.jfd.dao.driver.PeservationDao">
    <sql id="peservation">create_date,mode,label,origin,destination,kilometre</sql>
    <select id="find" parameterType="Peservation"
            resultType="Peservation">
        SELECT id,
        <include refid="peservation" />
        FROM  order_info
        <where>
            <if test="driver_id != null">driver_id = #{driver_id}</if>
            <if test="mode != null">AND mode = #{mode}</if>
            <if test="create_date != null">AND create_date = #{create_date}</if>
            <if test="origin != null">AND origin = #{origin}</if>
            <if test="destination != null">AND destination = #{destination}</if>
            <if test="kilometre != null">AND kilometre = #{kilometre}</if>
            <if test="label != null">AND label = #{label}</if>
        </where>
    </select>


    <sql id="Order">code,origin,destination,kilometre,create_date,mode,bonus</sql>
    <select id="get" parameterType="Peservation"
            resultType="Peservation">
        SELECT
        <include refid="Order" />
        FROM order_info
        <where>
            <if test="id != null">id = #{id}</if>
            <if test="code != null">AND code = #{code}</if>
            <if test="origin != null">AND origin = #{origin}</if>
            <if test="destination != null">AND destination = #{destination}</if>
            <if test="kilometre != null">AND kilometre = #{kilometre}</if>
            <if test="create_date != null">AND create_date = #{create_date}</if>
            <if test="mode != null">AND mode = #{mode}</if>
            <if test="bonus != null">AND bonus = #{bonus}</if>

        </where>
    </select>

    <sql id="roya">code,origin,destination,kilometre,bonus</sql>
    <select id="find1" parameterType="Peservation"
            resultType="Peservation">
        SELECT
        <include refid="roya" />
        FROM order_info
        where
        TO_DAYS(create_date) = TO_DAYS(NOW())
    </select>

    <sql id="month">code,origin,destination,kilometre,bonus</sql>
    <select id="find2" parameterType="Peservation"
            resultType="Peservation">
        SELECT
        <include refid="month" />
        FROM order_info
        where
        DATE_FORMAT( create_date, '%Y%m' ) = DATE_FORMAT( CURDATE( ) , '%Y%m' )
    </select>

</mapper>