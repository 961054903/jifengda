<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.caogen.jfd.dao.driver.PeservationDao">
    <sql id="peservation">create_date,mode,label,origin,destination,kilometre</sql>
    <select id="find" parameterType="Peservation"
            resultType="Peservation">
        SELECT id,
        <include refid="peservation" />
        FROM  order_info
        <where>
            <if test="driver_id != null">driver_id = #{driver_id}</if>
            <if test="mode != null">AND mode = #{mode}</if>
            <if test="create_date != null">AND create_date = #{create_date}</if>
            <if test="origin != null">AND origin = #{origin}</if>
            <if test="destination != null">AND destination = #{destination}</if>
            <if test="kilometre != null">AND kilometre = #{kilometre}</if>
            <if test="label != null">AND label = #{label}</if>
        </where>
    </select>

    <sql id="Order">code,origin,destination,kilometre,create_date,mode,bonus,user_id</sql>
    <select id="get" parameterType="Peservation"
            resultType="Peservation">
        SELECT
        <include refid="Order" />
        FROM order_info
        <where>
            <if test="id != null">id = #{id}</if>
            <if test="code != null">AND code = #{code}</if>
            <if test="origin != null">AND origin = #{origin}</if>
            <if test="destination != null">AND destination = #{destination}</if>
            <if test="kilometre != null">AND kilometre = #{kilometre}</if>
            <if test="create_date != null">AND create_date = #{create_date}</if>
            <if test="mode != null">AND mode = #{mode}</if>
            <if test="bonus != null">AND bonus = #{bonus}</if>

        </where>
    </select>
    <sql id="month">origin,destination,kilometre,status,model_id,status</sql>
    <select id="findput"
            resultType="Peservation">
        SELECT
        <include refid="month" />
        FROM order_info
    </select>


<sql id="moccc">code,driver_id</sql>
<select id="getdsp"
        resultType="Peservation">
SELECT
<include refid="moccc" />
FROM order_info
    <where>

    <if test="code != null"> code = #{code}</if>
    </where>
</select>


    <update id="update" parameterType="Peservation">
        UPDATE
        order_info
        SET
       driver_id=#{driver_id}
        WHERE
       code =#{code}
    </update>


    <sql id="mmm">code,destination</sql>
    <select id="getss" parameterType="Peservation"
            resultType="Peservation">
        SELECT id,
        <include refid="mmm" />
        FROM order_info
        <where>
            <if test="code != null">  code = #{code}</if>
        </where>
    </select>


    <sql id="Oder">code,origin,destination,kilometre,create_date,mode,bonus,status,user_id,driver_id,model_id,type,appoint_date,label,name,night_service_cost,traffic_jam_cost,
is_support,support_money,support_cost,order_money,ticket_money,actually_paid</sql>
    <select id="get6" parameterType="Peservation"
            resultType="Peservation">
        SELECT
        <include refid="Oder" />
        FROM order_info
        <where>
            <if test="id != null">id = #{id}</if>
            <if test="code != null">AND code = #{code}</if>
            <if test="origin != null">AND origin = #{origin}</if>
            <if test="destination != null">AND destination = #{destination}</if>
            <if test="kilometre != null">AND kilometre = #{kilometre}</if>
            <if test="create_date != null">AND create_date = #{create_date}</if>
            <if test="mode != null">AND mode = #{mode}</if>
            <if test="bonus != null">AND bonus = #{bonus}</if>
            <if test="driver_id != null">AND driver_id = #{driver_id}</if>
            <if test="status != null">AND status = #{status}</if>
            <if test="user_id != null">AND user_id = #{user_id}</if>
            <if test="model_id != null">AND model_id = #{model_id}</if>
            <if test="type != null">AND type = #{type}</if>
            <if test="appoint_date != null">AND appoint_date = #{appoint_date}</if>
            <if test="label != null">AND label = #{label}</if>
            <if test="name != null">AND name = #{name}</if>
            <if test="night_service_cost != null">AND night_service_cost = #{night_service_cost}</if>
            <if test="traffic_jam_cost != null">AND traffic_jam_cost = #{traffic_jam_cost}</if>
            <if test="is_support != null">AND is_support = #{is_support}</if>
            <if test="support_money != null">AND support_money = #{support_money}</if>
            <if test="support_cost != null">AND support_cost = #{support_cost}</if>
            <if test="order_money != null">AND order_money = #{order_money}</if>
            <if test="ticket_money != null">AND ticket_money = #{ticket_money}</if>
            <if test="actually_paid != null">AND actually_paid = #{actually_paid}</if>

        </where>
    </select>

    <delete id="delete" parameterType="Peservation">
       DELETE
       FROM
        order_info
        WHERE
        code =#{code}

    </delete>

</mapper>