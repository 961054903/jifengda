<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.caogen.jfd.dao.user.VehiclePriceDao">
	<sql id="price">model_id,night_cost,is_night,jam_cost,is_jam,empty_cost,single,multitude,city,night_start,night_end,jam_start,jam_end,bonus
	</sql>
	<select id="get" parameterType="VehiclePrice"
		resultType="VehiclePrice">
		SELECT
		<include refid="price" />
		FROM vehicle_price
		<where>
			<if test="model_id != null">AND model_id = #{model_id}</if>
			<if test="city != null">AND city = #{city}</if>
		</where>
	</select>
</mapper>